<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>skincare</title>
    <link rel="stylesheet" href="../css/body.css">
    <link rel="stylesheet" href="../css/beautynav.css">
    <link rel="stylesheet" href="../css/Addtocart.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Overpass+Mono:wght@300&family=Space+Grotesk:wght@300&display=swap"
        rel="stylesheet">

</head>

<body>
    <%- include('./partials/beautynav.ejs') %>
        <%- include('./partials/addtocart.ejs') %>
        <div class="h2">
            <h2 class="title">SOPHISTIQUÃ‰</h2>
          </div>
        
          <div class="product-grid">
            <% productsList.forEach(product => { %>
            <div class="product-item">
              <div class="box">
                <a href="productdetail">
                  <a href="#"></a>
                </a>
                <div class="img-slide">
                  <img src="../imgs/uploads/<%= product.image1 %>" width="350px" height="350px" class="hide">
                </div>
                <div class="overlay">
                  <img src="../imgs/uploads/<%= product.image2 %>" width="350px" height="350px">
                </div>
              </div>
              <div class="detail">
                <div class="type2">
                  <div class="name2"><%= product.name %></div>
                  <a href="Skinproducts/productdetail/<%= product._id %>"><%= product.description %></a>
                </div>
              </div>
              <div class="stars">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star unchecked"></span>
              </div>
              <div class="shop2">
                <% if (!userP || userP.Type == "client") { %>
                <span class=""><a href="#">ADD TO BAG </a></span>
                <% } else if (userP.Type == "admin") { %>
                <span class=""><a href="/admindashboard/editproduct/<%= product._id %>">Edit</a></span>
                <span class="">
                  <form action="/admindashboard/<%= product._id %>" method="post">
                    <input type="hidden" name="id" value="<%= product._id %>">
                    <button id='delete' type="submit">Delete</button>
                  </form>
                </span>
                <% } %>
                <a href="#" class="price2"><%= product.price %></a>
              </div>
            </div>
            <% }) %>
          </div>
        
      
        </body>
        
        </html>
