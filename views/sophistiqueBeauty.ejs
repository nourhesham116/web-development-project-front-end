<body>
    
        <%-include('./partials/beautynav.ejs') %>
        <%- include('./partials/addtocart.ejs') %>
    <script src="../javascript/sophistique beauty main .js"></script>

        <section>
            <div class="slideshow-container">
                <div class="mySlides fade">
                    <div class="parent">
                        <div>
                            
                            <img src="../imgs/rhode collage.png" width="1000">
                        </div>
