    <!-- product display section -->
    <section>
        <div class="product">
            <button class="pre-btn">
                <img src="../imgs/arrow.png">
            </button>
            <button class="nxt-btn">
                <img src="../imgs/arrow.png">
            </button>
            <div class="product-container">
                <% let containerIndex = 0; %>
                <% productsList.slice(0, 4).forEach((product, index) => { %>
                    <% if (product.category === 'BEAUTY') { %>
                        <div class="product-card" id="product<%= index %>">
                            <div class="product-image">
                                <span class="discount-tag">50% OFF</span>
                                <img src="../imgs/uploads/<%= product.image1 %>" class="product-thumb" alt>
                                <form action="/addtocart/add" method="post">
                                    <input type="hidden" name="product" value="<%= product._id %>">
                                    <input type="hidden" name="name" value="<%= product.name %>">
                                    <input type="hidden" name="price" value="<%= product.price %>">
                                    <input type="hidden" name="image" value="/imgs/uploads/<%= product.image1%>">
                                    <input type="number" name="quantity" value="1" hidden>
                                   <button class="card-btn" type="submit">ADD TO CART</button>
                                  </form>
                            </div>
                            <div class="product-info">
                                <p class="product-short-description">
                                    <%= product.description %>
                                    <a href="#" class="price">$‌47.00</a>
                                </p>
                            </div>
                        </div>
                    <% } %>
                    <% if ((index + 1) % 8 === 0) { %>
                        <% containerIndex++; %>
                    <% } %>
                <% }); %>
            </div>
        </div>
        <script src="../javascript/SliderScript.js"></script>

    </section>

    <!-- product description/shop onclick section -->
    <section>
        <div class="boxes">
            <div class="description">
                <div class="productbox">

                    <img src="../imgs/rare beauty concealer shades.jpg" alt="rare concealer" width="30%">
                    <div class="textalign">
                        <h3>Rare foundation new realeases </h3>
                        <br>
                        <h4>Leaves your skin looking flawless and rare</h4>
                        <br>
                        <button class="shopbtn"><a href="/Beautyproducts/foundation">SHOP FOUNDATION</a></button>
                    </div>
                </div>

            </div>


            <div class="description">
                <div class="productbox">
                    <img src="../imgs/fenty mascara.jpg" alt="fenty mascara" width="30%">
                    <div class="textalign">
                        <h3>Full frontal volume mascara</h3>
                        <br>
                        <h4>Black mascara leaving your eyelashes long and luscious </h4>
                        <br>
                        <button class="shopbtn"><a href="/Beautyproducts/mascaras">SHOP MASCARA</a></button>
                    </div>
                </div>
            </div>
        </div>

        <div class="boxes">
            <div class="description">
                <div class="productbox">
                    <img src="../imgs/rare beauty eyeshadow.jpg" alt="rare eyeshadow">
                    <div class="textalign">
                        <h3>Rare beauty eyeshadow</h3>
                        <br>
                        <h4>Bold and shimmery eye shadows for your glam nights</h4>
                        <br>
                        <button class="shopbtn"><a href="/Beautyproducts/Eyeshadows">SHOP EYESHADOW</a></button>
                    </div>
                </div>
            </div>

            <div class="description">
                <div class="productbox">
                    <img src="../imgs/rare beauty highlighter.jpg" alt="rare beauty highlighter">
                </div>
                <div class="textalign">
                    <h3>Rare beauty highlighters</h3>
                    <br>
                    <h4>Gives a nice natural shine to your face</h4>
                    <br>
                    <button class="shopbtn"><a href="/Beautyproducts/Highlighters">SHOP HIGHLIGHTER</a></button>
                </div>
            </div>
        </div>

    </section>

    <!-- rare beauty highlighter ad section   -->

    <section>
        <div class="parent">
            <div>
                <img src="../imgs/selena gomez highlight.jpg" width="535px" height=650px>
            </div>
            <div>
                <img src="../imgs/rarehighlighterset1.jpg" width="535px" height=650px>
            </div>
            <div class="highlighterdescription">
                <div class="productbox">
                    <div class="textalign">
                        <h1>Rare beauty highlighters</h1>
                        <br>
                        <h4>GLOWING ON THE INSIDE & OUT</h4>
                        <br>
                        <button class="shopbtn"><a href="../html/allface.html">OWN IT!</a></button>
                    </div>
                </div>
            </div>
            </div>
            <div>
                <%- include('./partials/footer.ejs') %>
            </div>
        </div>
    </section>

  


</body>

</html>